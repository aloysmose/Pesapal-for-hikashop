<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="1.0" method="upgrade" group="hikashoppayment">
	<name>Hikashop Pesapal Payment Plugin</name>
	<creationDate>28-10-2014</creationDate>
	<version>1.0</version>
	<author>Hikashop</author>
	<authorEmail>patwiri@gmail.com</authorEmail>
	<authorUrl>http://twitter.com/happiexy</authorUrl>
	<copyright>(C) 2010-2014 GBC SOFTWARE. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your Pesapal payment system</description>
	<files>
		<filename plugin="Pesapal">Pesapal.php</filename>
		<filename>OAuth.php</filename>
		<filename>readme.md</filename>
		<filename>logo.png</filename>
		<filename>Pesapal-ipn-listener.php</filename>
		<filename>Pesapal_end.php</filename>
		<filename>Pesapal.xml</filename>
		<filename>index.html</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>